{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "src",
  },
  "include": [
    "src",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}